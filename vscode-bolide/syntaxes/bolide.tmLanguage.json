{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Bolide",
    "scopeName": "source.bolide",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#literals"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#punctuation"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.bolide",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.bolide",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.bolide",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.bolide",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.bolide",
                    "match": "\\b(if|elif|else|while|for|in|return|import|as|select|timeout|default)\\b"
                },
                {
                    "name": "keyword.other.bolide",
                    "match": "\\b(fn|let|class|extern|struct|type|from)\\b"
                },
                {
                    "name": "keyword.control.async.bolide",
                    "match": "\\b(async|await|spawn|pool|scope|all)\\b"
                },
                {
                    "name": "storage.modifier.bolide",
                    "match": "\\b(owned|ref|weak|unowned)\\b"
                },
                {
                    "name": "keyword.operator.logical.bolide",
                    "match": "\\b(and|or|not)\\b"
                },
                {
                    "name": "variable.language.bolide",
                    "match": "\\b(self|super)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.bolide",
                    "match": "\\b(int|float|bool|str|bigint|decimal|dynamic|ptr|future|void)\\b"
                },
                {
                    "name": "storage.type.generic.bolide",
                    "match": "\\b(list|dict|channel|func)\\b"
                },
                {
                    "name": "storage.type.c.bolide",
                    "match": "\\b(c_int|c_uint|c_float|c_double|c_bool|char|uchar|short|ushort|long|ulong|longlong|ulonglong|i8|u8|i16|u16|i32|u32|i64|u64|size_t|ptrdiff_t)\\b"
                }
            ]
        },
        "literals": {
            "patterns": [
                {
                    "name": "constant.language.bolide",
                    "match": "\\b(true|false|none)\\b"
                },
                {
                    "name": "constant.numeric.integer.bigint.bolide",
                    "match": "\\b[0-9]+[Bb]\\b"
                },
                {
                    "name": "constant.numeric.float.decimal.bolide",
                    "match": "\\b[0-9]+(\\.[0-9]+)?[Dd]\\b"
                },
                {
                    "name": "constant.numeric.float.bolide",
                    "match": "\\b[0-9]+\\.[0-9]+\\b"
                },
                {
                    "name": "constant.numeric.integer.bolide",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arrow.skinny.bolide",
                    "match": "\\->"
                },
                {
                    "name": "keyword.operator.channel.bolide",
                    "match": "<-"
                },
                {
                    "name": "keyword.operator.arrow.fat.bolide",
                    "match": "=>"
                },
                {
                    "name": "keyword.operator.comparison.bolide",
                    "match": "==|!=|<=|>=|<|>"
                },
                {
                    "name": "keyword.operator.arithmetic.bolide",
                    "match": "[+*/%]"
                },
                {
                    "name": "keyword.operator.arithmetic.bolide",
                    "match": "-"
                },
                {
                    "name": "keyword.operator.assignment.bolide",
                    "match": "="
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.bolide",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                }
            ]
        },
        "punctuation": {
            "patterns": [
                {
                    "name": "punctuation.separator.bolide",
                    "match": "[;,:]"
                },
                {
                    "name": "punctuation.bracket.bolide",
                    "match": "[{}\\[\\]()]"
                },
                {
                    "name": "punctuation.accessor.bolide",
                    "match": "\\."
                }
            ]
        }
    }
}